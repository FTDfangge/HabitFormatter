<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HabitChoosing">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="340dp"
        android:layout_height="468dp"
        android:layout_marginTop="44dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="27dp"

            android:layout_weight="1.2"
            android:gravity="center"
            android:text="请选择你的习惯养成方案"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textSize="20sp" />

        <Spinner
            android:id="@+id/spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:entries="@array/HabitArray"
            android:spinnerMode="dropdown"
            android:background="@drawable/border"
            android:textSize="18sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="27dp"
            android:layout_weight="1.5">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="89dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="要求："
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textSize="18sp" />

            <AutoCompleteTextView
                android:id="@+id/autoCompleteTextView3"
                android:layout_width="251dp"
                android:layout_height="match_parent"
                android:layout_toRightOf="@+id/textView3"
                android:text="AutoCompleteTextView"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textSize="17sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="27dp"
            android:layout_weight="0.6">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="89dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="截止时间："
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textSize="18sp" />

            <AutoCompleteTextView
                android:id="@+id/autoCompleteTextView4"
                android:layout_width="251dp"
                android:layout_height="match_parent"
                android:layout_toRightOf="@+id/textView4"
                android:text="AutoCompleteTextView"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textSize="17sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="27dp"
            android:layout_weight="0.6">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="89dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="周期："
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textSize="18sp" />

            <AutoCompleteTextView
                android:id="@+id/autoCompleteTextView5"
                android:layout_width="251dp"
                android:layout_height="match_parent"
                android:layout_toRightOf="@+id/textView5"
                android:text="AutoCompleteTextView"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textSize="17sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="27dp"
            android:layout_weight="0.6">

            <TextView
                android:id="@+id/textView6"
                android:layout_width="89dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="凭证："
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textSize="18sp" />

            <AutoCompleteTextView
                android:id="@+id/autoCompleteTextView6"
                android:layout_width="251dp"
                android:layout_height="match_parent"
                android:layout_toRightOf="@+id/textView6"
                android:text="AutoCompleteTextView"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textSize="17sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="27dp"
            android:layout_weight="0.6">

            <TextView
                android:id="@+id/textView7"
                android:layout_width="89dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="测评周期："
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textSize="18sp" />

            <AutoCompleteTextView
                android:id="@+id/autoCompleteTextView7"
                android:layout_width="251dp"
                android:layout_height="match_parent"
                android:layout_toRightOf="@+id/textView7"
                android:text="AutoCompleteTextView"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textSize="17sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="27dp"
            android:layout_weight="0.6">

            <TextView
                android:id="@+id/textView8"
                android:layout_width="89dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="测评要求："
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textSize="18sp" />

            <AutoCompleteTextView
                android:id="@+id/autoCompleteTextView8"
                android:layout_width="251dp"
                android:layout_height="match_parent"
                android:layout_toRightOf="@+id/textView8"
                android:text="AutoCompleteTextView"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textSize="17sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="27dp"
            android:layout_weight="0.6">

            <TextView
                android:id="@+id/textView9"
                android:layout_width="89dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="测评次数："
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textSize="18sp" />

            <AutoCompleteTextView
                android:id="@+id/autoCompleteTextView9"
                android:layout_width="251dp"
                android:layout_height="match_parent"
                android:layout_toRightOf="@+id/textView9"
                android:text="AutoCompleteTextView"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textSize="17sp" />
        </RelativeLayout>

    </LinearLayout>

    <TableRow
        android:layout_width="395dp"
        android:layout_height="100dp"
        android:layout_marginBottom="56dp"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/button2"
            android:layout_width="78dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="说明"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

        <Button
            android:id="@+id/button"
            android:layout_width="142dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="确认"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

    </TableRow>


</androidx.constraintlayout.widget.ConstraintLayout>